<table>
  <thead>
    <tr>
      <th>Jedi</th>
      <th>Padawan</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @apprenticeships.each do |apprenticeship| %>
      <tr>
        <td><%= apprenticeship.jedi.name %></td>
        <td><%= apprenticeship.padawan.name %></td>
        <td><%= link_to 'Show', apprenticeship %></td>
        <td><%= link_to 'Edit', edit_apprenticeship_path(apprenticeship) %>
